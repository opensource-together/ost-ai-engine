# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5434/OST_PROD
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=OST_PROD

# dbt Database Configuration
DB_HOST=localhost
DB_PORT=5434
DB_SCHEMA=public
DB_THREADS=4

# dbt Configuration
DBT_PROJECT_DIR=src/dbt

# Redis Configuration
REDIS_CACHE_URL=redis://localhost:6380/0
REDIS_PASSWORD=your_redis_password

# API Keys
MISTRAL_API_KEY=your_mistral_api_key_here
GITHUB_ACCESS_TOKEN=your_github_access_token_here

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development
PROJECT_ROOT=/path/to/your/project

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Model Configuration
MODEL_DIR=models/
MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
MODEL_DISPLAY_NAME=all-MiniLM-L6-v2
MODEL_DIMENSIONS=384

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6380/0
CELERY_RESULT_BACKEND=redis://localhost:6380/0

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# GitHub Scraping Configuration
GITHUB_SCRAPING_QUERY="language:python stars:>100 language:javascript stars:>100 language:go stars:>100 language:java stars:>100 language:rust stars:>100 language:typescript stars:>100"
GITHUB_MAX_REPOSITORIES=500
GITHUB_MIN_STARS=100
GITHUB_LANGUAGES=python,javascript,go,java,rust,typescript

# Dagster Configuration
DAGSTER_HOME=./logs/dagster

# MLflow Configuration
MLFLOW_TRACKING_URI=sqlite:///logs/mlflow.db
MLFLOW_ARTIFACT_ROOT=logs/mlruns
MLFLOW_MODEL_REGISTRY_NAME=ost-models
MLFLOW_UI_PORT=5050
MLFLOW_UI_HOST=0.0.0.0

# Recommendation Model Parameters
RECOMMENDATION_SEMANTIC_WEIGHT=0.4
RECOMMENDATION_CATEGORY_WEIGHT=0.3
RECOMMENDATION_TECH_WEIGHT=0.2
RECOMMENDATION_POPULARITY_WEIGHT=0.1
RECOMMENDATION_TOP_N=10
RECOMMENDATION_MIN_SIMILARITY=0.1
RECOMMENDATION_MAX_PROJECTS=50
RECOMMENDATION_POPULARITY_THRESHOLD=100000